#!/usr/bin/env ruby
$: << File.expand_path("../../lib/", __FILE__)

require "thor"
require "tmuxinator"

if ARGV.length == 0
  project = Tmuxinator::Config.validate(".tmuxinator", true)
  Kernel.exec(project.render)
elsif ARGV.length == 1 && (ARGV & Tmuxinator::Cli.new.command_list).empty?
  Tmuxinator::Cli.new.start(ARGV[0])
else
  Tmuxinator::Cli.start
end
